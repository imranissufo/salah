<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Salah" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>
    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorAccent</item>
        <item name="android:numbersTextColor">@color/colorPrimary</item>
        <item name="android:numbersInnerTextColor">#f44336</item>
        <item name="android:numbersSelectorColor">#DCA811</item>
        <item name="android:numbersBackgroundColor">#004A80</item>
    </style>

    <style name="navigation">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">#0076A3</item>
        <item name="android:numbersTextColor">#b71c1c</item>
        <item name="android:numbersInnerTextColor">#f44336</item>
        <item name="android:numbersSelectorColor">#DCA811</item>
        <item name="android:numbersBackgroundColor">#004A80</item>
        <item name="android:amPmTextColor">#fff</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/advent_pro</item>
        <item name="android:fontFamily">@font/advent_pro</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/advent_pro</item>
        <item name="android:fontFamily">@font/advent_pro</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>