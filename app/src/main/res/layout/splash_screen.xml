<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".common.SplashScreen">

    <ImageView
        android:id="@+id/sc_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sujud"
        android:contentDescription="@string/sujud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salah_upr"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:textSize="40pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sc_iv"
        app:layout_constraintStart_toStartOf="@+id/sc_iv"
        app:layout_constraintTop_toBottomOf="@+id/sc_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>